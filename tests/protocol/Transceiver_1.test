%description:

Tests signal transmitter and signal receiver.

%file: test.ned

import inet.queueing.source.ActivePacketSource;
import inet.queueing.sink.PassivePacketSink;
import inet.protocol.transceiver.Transmitter;
import inet.protocol.transceiver.Receiver;

network TestTransceiver
{
    submodules:
        source: ActivePacketSource {
            @display("p=100,100");
        }
        transmitter: Transmitter {
            @display("p=100,200");
        }
        receiver: Receiver {
            @display("p=100,300");
        }
        sink: PassivePacketSink {
            @display("p=100,400");
        }
    connections:
        source.out --> transmitter.in;
        transmitter.out --> receiver.in;
        receiver.out --> sink.in;
}

%inifile: omnetpp.ini

[General]
network = TestTransceiver
sim-time-limit = 10s
cmdenv-event-banners = false
*.source.packetLength = 100B
*.source.productionInterval = 1s
*.transmitter.datarate = 1Mbps
*.receiver.datarate = 1Mbps

